# Your local kubeconfig path
# On Windows: C:\Users\YourUsername\OneDrive\Documents\Dev_Stuff\config
# On WSL/Linux: /mnt/c/Users/YourUsername/OneDrive/Documents/Dev_Stuff/config
KUBECONFIG=/path/to/your/aks/kubeconfig

# AKS cluster details
AKS_RESOURCE_GROUP=your-aks-resource-group
AKS_CLUSTER_NAME=your-aks-cluster-name
AKS_SUBSCRIPTION_ID=your-subscription-id

# For service principal access (optional)
SP_APP_ID=your-service-principal-app-id
SP_PASSWORD=your-service-principal-password
SP_TENANT=your-tenant-id

# Domain configuration
ROCKET_CHAT_DOMAIN=chat.canepro.me
GRAFANA_DOMAIN=grafana.chat.canepro.me

# Migration settings
MIGRATION_PHASE=1  # 1=Prep, 2=Deploy, 3=Cutover
BACKUP_ENABLED=true
ROLLBACK_ENABLED=true

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_RETENTION=7d
